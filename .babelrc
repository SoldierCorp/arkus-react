{
    "presets": [
        "@babel/preset-env",
        "@babel/preset-react"
    ],
    "plugins": [
        [
        "module-resolver",
        {
            "root": ["./src"],
            "extensions": [
                ".ts",
                ".tsx",
                ".jsx",
                ".js",
                ".json"
            ],
            "alias": {
                "@assets": "./src/assets",
                "@images": "./src/assets/images",
                "@components": "./src/components",
                "@containers": "./src/containers"
            }
        }
    ]
  ]
}